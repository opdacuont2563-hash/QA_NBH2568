# ========================================
# Environment Variables - SurgiBot System
# โรงพยาบาลหนองบัวลำภู
# ========================================

# Application
NODE_ENV=development
APP_NAME="SurgiBot - ระบบติดตามสถานะการผ่าตัด"
APP_URL=http://localhost:3000
API_URL=http://localhost:3000/api

# Database (PostgreSQL)
DATABASE_URL="postgresql://username:admin@localhost:5432/surgibot_nbl?schema=public"
DATABASE_URL_NON_POOLING="postgresql://username:admin1234@localhost:5432/surgibot_nbl?schema=public"

# Authentication & Security
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production
JWT_SECRET=your-jwt-secret-change-this
JWT_REFRESH_SECRET=your-refresh-secret-change-this
JWT_EXPIRE_TIME=1h
JWT_REFRESH_EXPIRE_TIME=7d

# Encryption for PDPA Compliance (Patient Data)
ENCRYPTION_KEY=your-32-character-encryption-key
ENCRYPTION_IV=your-16-character-iv

# Session
SESSION_SECRET=your-session-secret-change-this
SESSION_MAX_AGE=86400

# WebSocket
WEBSOCKET_PORT=3001
WEBSOCKET_CORS_ORIGIN=http://localhost:3000

# Hospital Settings
HOSPITAL_NAME="โรงพยาบาลหนองบัวลำภู"
HOSPITAL_CODE="NBL"
DEFAULT_TIMEZONE="Asia/Bangkok"

# Features Toggle
ENABLE_TTS=true
ENABLE_GOOGLE_SHEETS=false
ENABLE_QR_CODE=true
ENABLE_BARCODE_SCANNER=false
ENABLE_AUTO_DELETE=true
ENABLE_AUTO_DISCHARGE=true

# Auto Flow Settings (minutes)
AUTO_DISCHARGE_DELAY_MIN=3
AUTO_DELETE_AFTER_DISCHARGE_MIN=3
RECOVERY_DURATION_MIN=60
ANNOUNCE_INTERVAL_MIN=20

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging & Monitoring
LOG_LEVEL=info
ENABLE_ERROR_REPORTING=true
SENTRY_DSN=

# PDPA Compliance
ENABLE_DATA_ENCRYPTION=true
ENABLE_AUDIT_LOG=true
DATA_RETENTION_DAYS=365
MASK_PATIENT_DATA=true

# API Keys (optional services)
GOOGLE_SHEETS_API_KEY=
TTS_API_KEY=

# Development
NEXT_TELEMETRY_DISABLED=1
